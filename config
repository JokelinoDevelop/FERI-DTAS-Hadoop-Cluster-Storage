# Core Configuration
CORE-SITE.XML_fs.defaultFS=hdfs://namenode:8020

# HDFS Data Directories - CRITICAL
HDFS-SITE.XML_dfs.namenode.name.dir=file:///tmp/hadoop-hadoop/dfs/name
